@model CrowdTouring_Projeto.ViewModel.SolucaoDesafio
@{
    ViewBag.Title = "Create";
}

<div class="col-md-offset-1 col-md-9" style="background-color:#FFFF99;margin-top:40px;border-radius:9px">

    <h2 style="text-align:center">@Model.NomeDesafio</h2>
    @using (Html.BeginForm("Create", "Solucoes", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group" style="margin-top:40px">
            @Html.LabelFor(m => m.NomeSolucao, "Solucao", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.NomeSolucao, "Solucao", new { @class = "form-control", maxlength = 50, id = "TituloDesafio", autocomplete = "off" })
            </div>
        </div>
        <div class="form-group" style="margin-top:120px">
            @Html.LabelFor(m => m.DescricaoSolucao, "Descricao", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.DescricaoSolucao, 10, 25, new { @class = "form-control" })
            </div>
        </div>
        @Html.HiddenFor(m => m.IdDesafio)
        <div class="form-group" style="padding-top:250px;margin-left:150px">
            <input type="file" name="file" class="marginTop" />
        </div>
        <div class="row">
            <button type="submit" class="btn btn-primary" style="margin-top:60px;margin-left:165px">Criar Solução</button>
        </div>
    }
    </div>
   

